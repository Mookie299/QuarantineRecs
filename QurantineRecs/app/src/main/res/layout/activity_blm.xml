<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5d2d3"
    tools:context=".blmActivity">

    <Button
        android:id="@+id/clickMe"
        android:layout_width="418dp"
        android:layout_height="47dp"
        android:backgroundTint="#C8C8C8"
        android:onClick="goToSo"
        android:text="Black Lives Matter.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.711" />

    <Button
        android:id="@+id/JustFloyd"
        android:layout_width="425dp"
        android:layout_height="43dp"
        android:backgroundTint="#C8C8C8"
        android:onClick="goToSu"
        android:text="Justice for George Floyd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.789" />

    <Button
        android:id="@+id/justTaylor"
        android:layout_width="422dp"
        android:layout_height="49dp"
        android:backgroundTint="#C8C8C8"
        android:onClick="goToSuv"
        android:text="Justice for Breonna Taylor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.876" />

    <Button
        android:id="@+id/bob"
        android:layout_width="417dp"
        android:layout_height="46dp"
        android:backgroundTint="#C8C8C8"
        android:onClick="goToYtk"
        android:text="Support Black owned Businesses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="361dp"
        android:layout_height="252dp"
        android:background="@drawable/textview_border"
        android:fontFamily="serif-monospace"
        android:text="While you get time to preocccupy yourself using our app, we encourage you to use this page to stay educated at a time like this. Our new reality has been heavily changed to focusing on systematic problems that should have been recovered. The goal of this app is to redirect your attention when it gets too overwhleming from social media. However, it is so important to educate yourself, that is how we make the first step of change. This app is not surrounding around the Black lives matter movement but we encourage you to take glances here. "
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />
</androidx.constraintlayout.widget.ConstraintLayout>